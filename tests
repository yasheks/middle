#include <iostream>
#include"middle.h"
using namespace std;

bool itc_mirror_num(long long number)
{
    int sizs = 0;
    long long tempNum = num;
    for (int i = 0; i<num; i++)
    {
        if(tempNum>0)
        {
            tempNum=tempNum/10;
            sizs++;
        }
    }
    int numb[sizs];

    for (int i = 0; i<sizs; i++)
    {
        if(num>0)
        {
            numb[i]=num%10;
            num=num/10;
        }
    }

    for (int i = 0; i<sizs; i++)
    {
        if(numb[i]!=numb[sizs-i-1])
        {
            return false;
        }
    }
    return true;
}
